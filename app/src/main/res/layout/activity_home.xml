<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    tools:context=".home">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include android:id="@+id/mytoolbar"
            layout="@layout/my_toolbar"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/linear_layout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/linear_layout_1">

            <TextView
                android:id="@+id/toll_gate_1"
                android:text="Toll Gate 1"
                android:textSize="25sp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/Amount_toll_1"
                android:text="Rs.100"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:padding="10dp"/>

            <Button
                android:id="@+id/pay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAY"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/input_design"
                android:layout_marginTop="15dp"
                android:padding="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/linear_layout_2">

            <TextView
                android:id="@+id/toll_gate_2"
                android:text="Toll Gate 2"
                android:textSize="25sp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/Amount_toll_2"
                android:text="Rs.300"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:padding="10dp"/>

            <Button
                android:id="@+id/pay2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAY"
                android:textSize="25sp"
                android:background="@drawable/input_design"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:padding="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/linear_layout_3">

            <TextView
                android:id="@+id/toll_gate_3"
                android:text="Toll Gate 3"
                android:textSize="25sp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/Amount_toll_3"
                android:text="Rs.150"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:padding="10dp"/>

            <Button
                android:id="@+id/pay3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAY"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/input_design"
                android:layout_marginTop="15dp"
                android:padding="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/linear_layout_4">

            <TextView
                android:id="@+id/toll_gate_4"
                android:text="Toll Gate 4"
                android:textSize="25sp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/Amount_toll_4"
                android:text="Rs.200"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:padding="10dp"/>
            <Button
                android:id="@+id/pay4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAY"
                android:textSize="25sp"
                android:background="@drawable/input_design"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:padding="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/linear_layout_5">

            <TextView
                android:id="@+id/toll_gate_5"
                android:text="Toll Gate 5"
                android:textSize="25sp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/Amount_toll_5"
                android:text="Rs.175"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:padding="10dp"/>

            <Button
                android:id="@+id/pay5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAY"
                android:textSize="25sp"
                android:background="@drawable/input_design"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:padding="10dp"/>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>